<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ResultActivity"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/result_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/result_header"
        android:layout_marginTop="12dp"
        android:layout_marginStart="22dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_trivia"
        android:layout_below="@+id/result_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp">
        <TextView
            android:id="@+id/trivia_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_1"
            android:textSize="28sp"
            android:layout_margin="12dp"
            android:gravity="center"
            android:fontFamily="@font/xilosa"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_result"
        android:layout_below="@+id/card_trivia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="22dp">
        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acertos: 1"
            android:textSize="28sp"
            android:layout_margin="12dp"
            android:gravity="center"
            android:fontFamily="@font/xilosa"/>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/back_to_menu"
        android:layout_below="@+id/card_result"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="22dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:text="Voltar ao Menu"
        android:fontFamily="@font/xilosa"/>

</RelativeLayout>