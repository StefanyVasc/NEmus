<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PlayActivity"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/img_lives"
        android:layout_width="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22dp"
        android:layout_height="wrap_content"
        android:src="@drawable/lives_filled"/>
    <ImageButton
        android:layout_below="@+id/img_lives"
        android:id="@+id/btn_play_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/btn_play_music"
        android:background="@null"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_play_music"
        android:layout_marginTop="22dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_choice_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:fontFamily="@font/xilosa"
            android:enabled="false"
            android:textColor="@color/grey"
            android:background="@color/colorPrimaryDisabled"
            />
        <Button
            android:id="@+id/btn_choice_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:fontFamily="@font/xilosa"
            android:enabled="false"
            android:textColor="@color/grey"
            android:background="@color/colorPrimaryDisabled"
            />
        <Button
            android:id="@+id/btn_choice_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:fontFamily="@font/xilosa"
            android:enabled="false"
            android:textColor="@color/grey"
            android:background="@color/colorPrimaryDisabled"
            />
        <Button
            android:id="@+id/btn_choice_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:fontFamily="@font/xilosa"
            android:enabled="false"
            android:textColor="@color/grey"
            android:background="@color/colorPrimaryDisabled"
            />


    </LinearLayout>

</RelativeLayout>